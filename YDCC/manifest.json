{
    "manifest_version": 3,
    "name": "Fraud Detection Extension",
    "version": "1.0",
    "permissions": ["activeTab", "scripting"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
        }
      ],
    "action": {
        "default_popup": "extension.html",
        "default_title": "Fraud Detection Extension"
    }
    
}